
#login-v2(layout='row', layout-align='start')
  #login-v2-intro(flex='', hide='', show-gt-sm='')
    .logo.md-accent-bg
      span#login_title FEEDZ
    .title(translate='LOGIN_V2.INTRO_TITLE') title here
    .description(translate='LOGIN_V2.INTRO_DESCRIPTION') intro here
  #login-v2-form-wrapper.banner_gradient.flex-scrollable.md-whiteframe-8dp(ms-scroll='')
    #login-v2-form
      .title(translate='LOGIN_V2.TITLE') Please Login to Feedz
      form(name='loginForm', novalidate='', ng-submit="login()")
        md-input-container.md-block(md-no-float='')
          input(name='username', ng-model='user.username', placeholder='Username', translate='', translate-attr-placeholder='REGISTER_V2.NAME', required='')
          div(ng-messages='registerForm.username.$error', role='alert')
            div(ng-message='required')
              span(translate='REGISTER_V2.ERRORS.USERNAME_REQUIRED') Username field is required

        md-input-container.md-block(md-no-float='')
          input(type='password', name='password', ng-model='user.password', placeholder='Password', translate='', translate-attr-placeholder='LOGIN_V2.PASSWORD', required='')
          div(ng-messages='loginForm.password.$error', role='alert')
            div(ng-message='required')
              span(translate='REGISTER_V2.ERRORS.PASSWORD_CONFIRM_REQUIRED') Password (Confirm) field is required
        div(layout='column', layout-align='start center')
          md-button.md-raised.indigo.white-text(type="submit") login
