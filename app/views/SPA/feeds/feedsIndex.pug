	md-fab-trigger
		md-button.md-fab.md-warn(aria-label='menu')
			md-tooltip(md-direction='top') Menu
			md-icon(md-svg-src='img/icons/menu.svg')
	md-fab-actions
		md-button.md-fab.md-raised.md-mini.md-warn(aria-label='New Post', ng-click="showAddPost($event)")
